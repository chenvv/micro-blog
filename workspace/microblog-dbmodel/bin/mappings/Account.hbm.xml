<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="vivian.jsash.microblog.dbmodel.dao">
	<class
		name="Account"
		table="account"
	>
		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<id
			name="Id"
			type="integer"
			column="ACCOUNT_ID"
		>
			<generator class="identity"/>
		</id>

		<property
			name="AccountName"
			column="ACCOUNT_NAME"
			type="string"
			not-null="true"
			length="40"
		/>
		<property
			name="AccountPassword"
			column="ACCOUNT_PASSWORD"
			type="string"
			not-null="true"
			length="160"
		/>
		<property
			name="AccountLevel"
			column="ACCOUNT_LEVEL"
			type="java.lang.Byte"
			not-null="true"
			length="3"
		/>
		<property
			name="AccountIcon"
			column="ACCOUNT_ICON"
			type="string"
			not-null="false"
			length="255"
		/>
		<property
			name="CreateTime"
			column="CREATE_TIME"
			type="timestamp"
			not-null="true"
			length="19"
		/>
		<property
			name="FollowCount"
			column="FOLLOW_COUNT"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="FollowedCount"
			column="FOLLOWED_COUNT"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="BlogCount"
			column="BLOG_COUNT"
			type="integer"
			not-null="true"
			length="10"
		/>


	</class>	
</hibernate-mapping>